{
  "name": "@ayato-san/tooling-configs",
  "type": "module",
  "version": "1.0.0",
  "description": "My custom tooling settings",
  "author": "Ayato-san <ayatosan.pro@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/Ayato-san/tooling-configs#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ayato-san/tooling-configs.git"
  },
  "bugs": {
    "url": "https://github.com/Ayato-san/tooling-configs/issues"
  },
  "keywords": [
    "eslint-config",
    "prettier-config",
    "tsconfig",
    "typescript",
    "config"
  ],
  "exports": {
    "./eslint": {
      "types": "./build/eslint/index.d.ts",
      "import": "./build/eslint/index.js",
      "require": "./build/eslint/index.cjs"
    },
    "./prettier": "./build/prettier/index.json",
    "./tsconfig.app": "./tsconfig.app.json",
    "./tsconfig.browser": "./tsconfig.browser.json",
    "./tsconfig.package": "./tsconfig.package.json"
  },
  "files": [
    "./tsconfig.app.json",
    "./tsconfig.base.json",
    "./tsconfig.browser.json",
    "./tsconfig.package.json",
    "build/eslint",
    "build/prettier"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prebuild": "npm run format && npm run lint:fix",
    "build": "tsup",
    "postbuild": "rm -r ./build/deleted && find ./build -name '*.cts' -type f -delete",
    "prepublishOnly": "npm run build",
    "release": "npx release-it"
  },
  "dependencies": {
    "@adonisjs/eslint-plugin": "^1.3.0",
    "@eslint/eslintrc": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "eslint-config-flat-gitignore": "^0.1.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-i": "^2.29.1",
    "eslint-plugin-jsdoc": "^48.2.13",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-n": "^17.9.0",
    "eslint-plugin-perfectionist": "^2.11.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-tailwindcss": "^3.17.4",
    "jsonc-eslint-parser": "^2.4.0",
    "local-pkg": "^0.5.0"
  },
  "devDependencies": {
    "@antfu/eslint-define-config": "^1.23.0-2",
    "@types/eslint": "^8.56.10",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^20.14.8",
    "eslint": "^8.57.0",
    "prettier": "^3.3.2",
    "release-it": "^17.4.0",
    "tsup": "^8.1.0",
    "typescript": "^5.5.2"
  },
  "prettier": "./public/prettier/index.json",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): ${version}",
      "tagAnnotation": "v${version}",
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "web": true
    }
  }
}
